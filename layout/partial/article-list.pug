ul.article-list
  each _post in page.posts.data
    li.article-list-item
      .article-container
        a.article-title(href=url_for(_post.path), title=`${_post.title||'无标题'}`) #{ _post.title|| '无标题' }
        .article-preview #{ _post.intro?_post.intro:truncate(strip_html(_post.content),{length: 100,omission:'...'}) }
        .article-time #{ time(_post.date, 'YYYY-MM-DD') }
      .img-wrapper(style=`background-image: url(${_post.featured_image})`)
